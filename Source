if player and player ~= LP then
repeat task.wait()
LPH:ChangeState("FallingDown")
LPH.RootPart.Velocity += (player.Character.HumanoidRootPart.Position - LPH.RootPart.Position).Unit * 200
until LPH.Health <= 0
end
 end   
})

